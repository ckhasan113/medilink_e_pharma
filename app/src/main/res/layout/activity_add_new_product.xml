<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_bottom"
    tools:context=".product.AddNewProductActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/amiko"
        android:gravity="center"
        android:text="Add New Product"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/addProductImageBtn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/add_hospital"
            />

        <LinearLayout
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="15pt"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="3"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product"
                android:textColor="#fff"
                android:paddingTop="5dp"/>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/write_text_5"
                >

                <EditText
                    android:id="@+id/productName"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/write_text_5"
                    android:fontFamily="@font/amiko_semibold"
                    android:gravity="center"
                    android:hint="Name"
                    android:includeFontPadding="true"
                    android:inputType="text"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:textColor="@color/colorMain"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="15pt"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="3"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company"
                android:textColor="#fff"
                android:paddingTop="5dp"/>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/write_text_5"
                >

                <EditText
                    android:id="@+id/productCompany"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/write_text_5"
                    android:fontFamily="@font/amiko_semibold"
                    android:gravity="center"
                    android:hint="Name"
                    android:includeFontPadding="true"
                    android:inputType="text"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:textColor="@color/colorMain"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="15pt"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="3"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#fff"
                android:paddingTop="5dp"/>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/write_text_5"
                >

                <EditText
                    android:id="@+id/productPrice"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/write_text_5"
                    android:fontFamily="@font/amiko_semibold"
                    android:gravity="center"
                    android:hint="Price"
                    android:includeFontPadding="true"
                    android:inputType="number"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:textColor="@color/colorMain"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="15pt"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="3"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expired date"
                android:textColor="#fff"
                android:paddingTop="5dp"/>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/write_text_5"
                >

                <TextView
                    android:id="@+id/expired_date_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/amiko_semibold"
                    android:gravity="center"
                    android:text="Select"
                    android:textSize="18sp"
                    android:textColor="@color/colorMain"
                    />
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/add_new_product_info"
            android:text="Add Product"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_box"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="70dp"
            android:padding="10dp"
            android:textColor="@color/colorMain"
            />

        <Button
            android:visibility="gone"
            android:id="@+id/update_product_info"
            android:text="Update"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_box"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/colorMain"
            />

        <Button
            android:visibility="gone"
            android:id="@+id/remove_product_info"
            android:text="Remove"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_box"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/colorMain"
            />

    </LinearLayout>

</LinearLayout>