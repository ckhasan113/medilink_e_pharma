<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:id="@+id/getRequestDetails"
    android:background="@drawable/button_doctor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/request_user_iv"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="30dp"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/v_doctor"
            />

        <TextView
            tools:text="Name"
            android:gravity="center"
            android:textColor="#000000"
            android:id="@+id/request_user_name_TV"
            android:layout_alignTop="@+id/request_user_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/request_user_iv"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            tools:text="Address"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/request_user_address_tv"
            android:layout_below="@id/request_user_name_TV"
            android:layout_alignStart="@+id/request_user_name_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            tools:text="Price: "
            android:textColor="#F44336"
            android:gravity="center"
            android:id="@+id/request_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/request_user_address_tv"
            android:layout_alignStart="@+id/request_user_name_TV"/>

        <!--<LinearLayout
            android:id="@+id/request_layout"
